            android:name=".ActivityPrivacyPolicy"
            android:launchMode="singleTask" />
        <activity
            android:name=".ActivityAtribuciones"
            android:launchMode="singleTask" />
        <activity
            android:name=".ActivitySendCommentProf"
            android:launchMode="singleTask" />
